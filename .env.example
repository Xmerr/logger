# Required: RabbitMQ connection URL
RABBITMQ_URL=amqp://user:password@rabbitmq:5672

# Required: Queue name to consume from
QUEUE_NAME=github-events

# Required: Loki endpoint URL
LOKI_HOST=http://loki:3100

# Optional: Loki basic auth credentials
LOKI_USERNAME=
LOKI_PASSWORD=

# Optional: Static labels to add to all log entries (comma-separated key=value pairs)
LOKI_LABELS=app=rabbitmq-consumer,env=production

# Optional: Dead Letter Queue configuration
DLQ_ENABLED=true
DLQ_EXCHANGE=dlx
DLQ_ROUTING_KEY=dead-letter

# Optional: Logging configuration
LOG_LEVEL=info

# Optional: Consumer configuration
PREFETCH_COUNT=10
RECONNECT_ATTEMPTS=5
RECONNECT_DELAY_MS=1000
